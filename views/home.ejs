  <p class="pBorder"> <%= startingContent %> </p>

    <div class="col-md-8">
      <% posts.forEach(function(post) { %>
      <div class="row-md-5 g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
        <div class="col p-4 d-flex flex-column position-static">
          <strong class="d-inline-block mb-2 text-primary"><%= post.section %> </strong>
          <h3 class="mb-0"><%= post.title %></h3>
          <div class="mb-1 text-muted"> <%= day %></div>
          <p class="card-text mb-auto">
            <%= post.content.substring(0, 100) + "..." %>
            <a target="_blank" href="/posts/<%=post._id%>" class="stretched-link">Read More</a>
          </p>
        </div>
      </div>
      <% }) %>
    </div>




